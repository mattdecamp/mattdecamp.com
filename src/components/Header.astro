---
// import Hamburger from "./Hamburger.astro";
import SocialIcons from "./SocialIcons.astro";
import Navigation from "./Navigation.astro";
import Avatar from "./Avatar.astro";
const { title, subTitle, homepage } = Astro.props;
---

<header>
  <nav>
    <!-- <Hamburger /> -->

    {
      homepage ? (
        <nav id="nav-container" class="">
          <div id="nav-container--top" class="mb-2">
            <Navigation />
          </div>
          <div id="nav-container--bottom" class="grid grid-cols-6 grid-rows-3 gap-3 items-center mb-4">
            <div id="nav-titles" class="col-start-1 col-end-5 row-start-1 row-end-4 flex flex-col gap-2">
              <h1 id="site-title" class="font-serif mb-1">{title}</h1>
              <h3 class="">{subTitle}</h3>
              <SocialIcons />
            </div>
            <Avatar />
          </div>
        </nav>
      ) : (
        <nav id="nav-container" class="mb-3">
          <div id="nav-container--top" class="flex flex-row flex-wrap gap-2 justify-between items-center">
            <div id="site-title" class="font-serif text-3xl">{title}</div>
          </div>
          <div id="nav-container--botom" class="mb-2">
            <Navigation />
          </div>
        </nav>
      )
    }
  </nav>
</header>