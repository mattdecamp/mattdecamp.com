---
// import "../styles/base.css";
import type { CollectionEntry } from "astro:content";
import GeneralLayout from "./GeneralLayout.astro";

type Props = CollectionEntry<"blog">["data"];

const dateOptions: object = {
  year: "numeric",
  month: "long",
  day: "numeric",
};

const { title, description, author, pubDate, tags } = Astro.props;
---

<GeneralLayout>
  <article>
    <div class="mb-4 py-2 border-y-2 border-gray-400 border-dashed">
      <h1 class="mb-1 text-4xl">{title}</h1>
      <p>{new Date(pubDate).toLocaleDateString("en-US", dateOptions)}</p>
      <p class="text-base italic">{description}</p>
    </div>
    <slot />
  </article>
</GeneralLayout>